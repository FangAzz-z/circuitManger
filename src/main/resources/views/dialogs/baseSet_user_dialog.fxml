<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xbky.circuitManger.view.baseSetUser.BaseSetUserAddController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <BorderPane prefHeight="350.0" prefWidth="600.0">
                    <center>
                        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="tfId" prefHeight="0" prefWidth="0" promptText="id" visible="false"/>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="姓名" />
                                        <TextField fx:id="tfName" prefHeight="30.0" prefWidth="246.0" promptText="产品类别">
                                            <VBox.margin>
                                                <Insets left="25.0" right="25.0" />
                                            </VBox.margin></TextField>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100" prefWidth="200" spacing="15.0">
                                    <children>
                                        <RadioButton fx:id="rbMale" mnemonicParsing="false" selected="true" text="男" value="男" textFill="WHITE">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="gender" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="rbFemale" mnemonicParsing="false" text="女" value="女" textFill="WHITE" toggleGroup="$gender">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </RadioButton>
                                    </children>
                                    <VBox.margin>
                                        <Insets left="25.0" right="25.0" />
                                    </VBox.margin>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="部门" />
                                        <TextField fx:id="tfDepartment" prefHeight="30.0" prefWidth="246.0" promptText="产品型号">
                                            <VBox.margin>
                                                <Insets left="25.0" right="25.0" />
                                            </VBox.margin></TextField>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="职位" />
                                        <TextField fx:id="tfJob" prefHeight="30.0" prefWidth="246.0" promptText="产品型号">
                                            <VBox.margin>
                                                <Insets left="25.0" right="25.0" />
                                            </VBox.margin></TextField>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="电话" />
                                        <TextField fx:id="tfPhone" prefHeight="30.0" prefWidth="246.0" promptText="厂家品牌">
                                            <VBox.margin>
                                                <Insets left="25.0" right="25.0" />
                                            </VBox.margin></TextField>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </center>
                </BorderPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#cancelSubmit" text="取消" />
                        <Button mnemonicParsing="false" onAction="#submitData" text="添加" />
                    </children>
                    <VBox.margin>
                        <Insets right="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
