<BorderPane prefHeight="762.0" prefWidth="977.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xbky.circuitManger.view.baseSetPt.BaseSetPtController">
    <left>
        <VBox prefHeight="762.0" prefWidth="300.0" spacing="10.0" styleClass="background"  BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="qTfCategory" prefHeight="30.0" prefWidth="246.0" promptText="产品类别">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="qTfModel" prefHeight="30.0" prefWidth="246.0" promptText="产品型号">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="qTfBrand" prefHeight="30.0" prefWidth="246.0" promptText="厂家品牌">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
                <HBox prefHeight="30.0" prefWidth="250.0" spacing="10.0">
                    <children>
                        <Button fx:id="reset" onAction="#resetData"  mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" styleClass="btnGreen" text="清除">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                            </effect>
                        </Button>
                        <Button fx:id="query" onAction="#queryData"  alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" styleClass="btnGreen" text="查询" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="110.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_RIGHT" prefHeight="593.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="userTable" prefHeight="740.0" prefWidth="795.0" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="id" maxWidth="700.0" prefWidth="20.0" text="ID" />
                        <TableColumn fx:id="category" maxWidth="4000.0" prefWidth="75.0" text="类别" />
                        <TableColumn fx:id="model" maxWidth="4000.0" prefWidth="75.0" text="型号" />
                        <TableColumn fx:id="brand" maxWidth="4000.0" prefWidth="75.0" text="品牌" />
                    </columns>
                    <VBox.margin>
                        <Insets left="10.0" right="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="BASELINE_RIGHT" prefHeight="30.0" prefWidth="286.0" spacing="10.0" stylesheets="@../css/theme/drawer.css">
                    <children>
                        <Button fx:id="addData" onAction="#addData"  ellipsisString="" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="primary" text="添加" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                        <Button fx:id="modify" onAction="#modifyData" ellipsisString="" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="warning" text="修改" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                        <Button fx:id="deleteData" onAction="#deleteData" ellipsisString="" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="danger" text="删除" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                    </children>
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
</BorderPane>
