<BorderPane prefHeight="762.0" prefWidth="977.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xbky.circuitManger.view.module.BaseSetUserController">
<left>
    <VBox prefHeight="762.0" prefWidth="300.0" spacing="10.0" styleClass="background" stylesheets="@/css/theme/drawer.css" BorderPane.alignment="CENTER">
        <children>
            <TextField fx:id="username" prefHeight="30.0" prefWidth="246.0" promptText="姓名">
                <VBox.margin>
                    <Insets left="25.0" right="25.0" />
                </VBox.margin></TextField>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="255.0" spacing="15.0">
                <children>
                    <RadioButton fx:id="rbAll" mnemonicParsing="false" selected="true"  text="全部" textFill="WHITE">
                        <toggleGroup>
                            <ToggleGroup fx:id="gender" />
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="rbMale" mnemonicParsing="false" text="男" textFill="WHITE" toggleGroup="$gender">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </RadioButton>
                    <RadioButton fx:id="rbFemale" mnemonicParsing="false" text="女" textFill="WHITE" toggleGroup="$gender">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </RadioButton>
                </children>
                <VBox.margin>
                    <Insets left="25.0" right="25.0" />
                </VBox.margin>
            </HBox>
            <TextField fx:id="textDepartment" prefHeight="30.0" prefWidth="246.0" promptText="部门">
                <VBox.margin>
                    <Insets left="25.0" right="25.0" />
                </VBox.margin></TextField>
            <TextField fx:id="textJob" prefHeight="30.0" prefWidth="246.0" promptText="职位">
                <VBox.margin>
                    <Insets left="25.0" right="25.0" />
                </VBox.margin></TextField>
            <TextField fx:id="textPhone" prefHeight="30.0" prefWidth="246.0" promptText="电话">
                <VBox.margin>
                    <Insets left="25.0" right="25.0" />
                </VBox.margin></TextField>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="250.0" spacing="10.0">
                <children>
                    <Button fx:id="reset" mnemonicParsing="false" prefHeight="25.0" prefWidth="75.0" styleClass="success" text="清空" textFill="WHITE">
                        <font>
                            <Font size="15.0" />
                        </font>
                        <effect>
                            <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                        </effect>
                    </Button>
                    <Button fx:id="query" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" styleClass="success" text="查询" textFill="WHITE">
                        <font>
                            <Font size="15.0" />
                        </font>
                        <effect>
                            <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                        </effect>
                    </Button>
                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <VBox.margin>
                    <Insets left="100.0" />
                </VBox.margin>
            </HBox>
        </children>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
        <BorderPane.margin>
            <Insets />
        </BorderPane.margin>
    </VBox>
</left>
<center>
    <VBox alignment="TOP_RIGHT" prefHeight="593.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <children>
            <TableView fx:id="userTable" prefHeight="740.0" prefWidth="795.0" tableMenuButtonVisible="true">
                <columns>
                    <TableColumn fx:id="id" maxWidth="700.0" prefWidth="20.0" text="ID" />
                    <TableColumn fx:id="name" maxWidth="4000.0" prefWidth="75.0" text="姓名" />
                    <TableColumn fx:id="department" maxWidth="4000.0" prefWidth="75.0" text="部门" />
                    <TableColumn fx:id="job" maxWidth="4000.0" prefWidth="75.0" text="职位" />
                    <TableColumn fx:id="phone" maxWidth="4000.0" prefWidth="75.0" text="电话" />
                </columns>
                <VBox.margin>
                    <Insets left="10.0" right="5.0" />
                </VBox.margin>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </children>
    </VBox>
</center>
   <top>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BASELINE_RIGHT" prefHeight="30.0" prefWidth="286.0" spacing="10.0" stylesheets="@../css/theme/drawer.css">
               <children>
                   <Button ellipsisString="" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="primary" text="添加" textFill="WHITE">
                       <font>
                           <Font size="15.0" />
                       </font>
                       <effect>
                           <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                       </effect>
                   </Button>
                   <Button ellipsisString="" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="warning" text="修改" textFill="WHITE">
